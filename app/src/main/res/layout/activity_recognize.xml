<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.microsoft.projectoxford.emotionsample.RecognizeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="326dp"
                android:layout_height="43dp"
                android:text="題目："
                android:id="@+id/questiontext"
                android:gravity="center_horizontal"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/selectedImage"
                android:layout_width="141dp"
                android:layout_height="141dp"
                android:layout_toRightOf="@+id/image_control"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" v.s. "
                android:id="@+id/textView2"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/selectedImage2"
                android:layout_width="141dp"
                android:layout_height="141dp"
                android:layout_toRightOf="@+id/selectedImage"
                android:background="#E0E0E0" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:id="@+id/buttonSelectImage"
                android:onClick="selectImage"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Select Image"
                android:layout_toRightOf="@+id/buttonSelectImage"
                android:onClick="selectImage2"
                android:id="@+id/buttonSelectImage2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="142dp"
                android:layout_height="55dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/notificationp1" />

            <TextView
                android:layout_width="142dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_toRightOf="@+id/notificationp1"
                android:id="@+id/notificationp2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:scrollbars="vertical"
                android:fadingEdge="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/editTextResult"
                    android:textColor="#000000"
                    android:text="Your score:"
                    android:textSize="20dp" />
            </ScrollView>


            <ScrollView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:scrollbars="vertical"
                android:fadingEdge="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:layout_toRightOf="@+id/editTextResult"
                    android:id="@+id/editTextResult2"
                    android:text="Your score:"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
            </ScrollView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The winner is ....."
            android:id="@+id/winner"
            android:gravity="center_horizontal"
            android:textColor="#009900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者：Howard Weng @11th MSP\n作者信箱：howarder3@gmail.com\n作者FB：https://www.facebook.com/weng.hao.5\n有問題、建議、好的想法或發現bug歡迎聯絡XD"
            android:textColor="#00BBFF" />

    </LinearLayout>

</RelativeLayout>
